{{#if addNewAnswer}}
 <h1>New Answers</h1>
   <div>
     <form>
       <div class="form-group">
         <label for="answerAuthor">Your Name</label>
         {{input value=answerAuthor id="answerAuthor"}}
      </div>

      <div class="form-group">
        <label for="answerContent">Your Answer</label>
        {{input value=answerContent id="answerContent"}}
      </div>


      <button {{action 'save1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'answerFormShow'}}>Answer this question!</button>
{{/if}}
