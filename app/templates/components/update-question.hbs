{{#if updateQuestionForm}}
  <h4>Update {{question.questionAuthor}}'s question "{{question.questionTitle}}"</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="questionTitle">Title</label>
          {{input value=questionTitle id="questionTitle" placeholder=question.questionTitle}}
        </div>

        <div class="form-group">
          <label for="questionAuthor">Author</label>
          {{input value=questionAuthor id="questionAuthor" placeholder=question.questionAuthor}}
        </div>

        <div class="form-group">
          <label for="questionContent">Content</label>
          {{input value=questionContent id="questionContent" placeholder=question.questionContent}}
        </div>

        <div class="form-group">
          <label for="priority">Priority Level (scale of 1-10)</label>
          {{input value=priority id="priority" placeholder=question.priority type="number" min="0" max="10"}}
        </div>

        <button {{action 'update' question}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateQuestionForm'}}>Update this question</button>
{{/if}}
