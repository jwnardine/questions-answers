{{#if addNewQuestion}}
  <h1>New Question</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="questionTitle">Title</label>
          {{input value=questionTitle id="questionTitle"}}
        </div>

        <div class="form-group">
          <label for="questionAuthor">Author</label>
          {{input value=questionAuthor id="questionAuthor"}}
        </div>

        <div class="form-group">
          <label for="questionContent">Further elaboration</label>
          {{input value=questionContent id="questionContent"}}
        </div>

        <div class="form-group">
          <label for="answer">Answer</label>
          {{input value=answer id="answer"}}
        </div>

        <button {{action 'save1'}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'questionFormShow'}}>Ask new question!</button>
{{/if}}
